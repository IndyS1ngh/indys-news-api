{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 15,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a single article based on a given id"
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for an article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 20,
          "body": "Seafood substitutions are increasing",
          "article_id": 3,
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves a comment that was added to an article",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 21,
        "body": "I love apples.",
        "article_id": 2,
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves an updated article with an updated votes property",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 15,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "they are increasing rapidly!",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a given comment by comment_id"
  }
}
